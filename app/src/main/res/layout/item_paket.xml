<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    android:id="@+id/layout"
    app:cardBackgroundColor="@color/transparant2">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeColor="@color/gray4"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="@dimen/paddingSmall"
        app:cardCornerRadius="@dimen/cornerRadiusNormal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"
            android:paddingHorizontal="@dimen/paddingSmall"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_nametujuan"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/bima"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textAppearance="@style/textAppearance.Body3.Bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_jumlah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_50"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textAppearance="@style/textAppearance.Body3.Bold"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</com.google.android.material.card.MaterialCardView>